        // TODO add your handling code here:
    }                                           

    private void DegreesSelectActionPerformed(java.awt.event.ActionEvent evt) {                                              
    double initialangle, newnum;
    if (OutputField.getText().equals("(Output)") || OutputField.getText().equals("No input data!")){
        OutputField.setText("No input data!");
    } else {
    initialangle = Double.parseDouble(AngleField.getText());
    switch (trigFunction){
        case "Sin": newnum = Math.sin(initialangle*Math.PI/180);
                    OutputField.setText("Sin " + initialangle + " (degrees) = " + String.valueOf(newnum));
        break;
        case "Cos": newnum = Math.cos(initialangle*Math.PI/180);
                    OutputField.setText("Cos " + initialangle + " (degrees) = " + String.valueOf(newnum));
        break;
        case "Tan": newnum = Math.tan(initialangle*Math.PI/180);
                    OutputField.setText("Tan " + initialangle + " (degrees) = " + String.valueOf(newnum));   
        default: int x;
    }
    }
    }                                             

    private void RadiansSelectActionPerformed(java.awt.event.ActionEvent evt) {                                              
    double initialangle, newnum;
    if (OutputField.getText().equals("(Output)") || OutputField.getText().equals("No input data!")){
        OutputField.setText("No input data!");
    } else {
    initialangle = Double.parseDouble(AngleField.getText());
    switch (trigFunction){
        case "Sin": newnum = Math.sin(initialangle);
                    OutputField.setText("Sin " + initialangle + " (radians) = " + String.valueOf(newnum));
        break;
        case "Cos": newnum = Math.cos(initialangle);
                    OutputField.setText("Cos " + initialangle + " (radians) = " + String.valueOf(newnum));
        break;
        case "Tan": newnum = Math.tan(initialangle);
                    OutputField.setText("Tan " + initialangle + " (radians) = " + String.valueOf(newnum));   
        default: int x;
    }
    }
    }                                             

    private void AngleFieldActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
    }                                          

    private void CheckButtonPressedActionPerformed(java.awt.event.ActionEvent evt) {                                                   
    double a, b, c;
    boolean isTriple;
    a = Double.parseDouble(enterA.getText());
    b = Double.parseDouble(enterB.getText());
    c = Double.parseDouble(enterC.getText());
    if (Math.pow(a, 2)+Math.pow(b, 2) == Math.pow(c,2)){
        ResultField1.setText("The triple " + a +", " + b + " and " + c);
        ResultField2.setText("is a Pythagorean triple!");
    } else {
        ResultField1.setText("The triple " + a +", " + b + " and " + c);
        ResultField2.setText("is NOT a pythagorean triple!");
    }
    }                                                  

    private void AllClearPressedActionPerformed(java.awt.event.ActionEvent evt) {                                                
    AngleField.setText("");
    OutputField.setText("(Output)");
    enterA.setText("");
    enterB.setText("");
    enterC.setText("");        
    ResultField1.setText("Result:");
    ResultField2.setText("");
    
    }                                               

    private void BackButtonPressedActionPerformed(java.awt.event.ActionEvent evt) {                                                  
    new MoreFunctions().setVisible(true);
    this.dispose();
    }                                                 

