    private void SinPressedActionPerformed(java.awt.event.ActionEvent evt) {                                           
    double initialangle, calculatedangle, result; 
    initialangle = Double.parseDouble(AngleField.getText());
    result = Math.sin(initialangle*Math.PI/180);
    OutputField.setText("Sin " + initialangle + " (degrees) = " + String.valueOf(result));
    trigFunction = "Sin";
    Storage = result;
    startingAngle = initialangle;
    }                                          

    private void TanPressedActionPerformed(java.awt.event.ActionEvent evt) {                                           
    double initialangle, calculatedangle, result;
    initialangle = Double.parseDouble(AngleField.getText());
    result = Math.tan(initialangle*Math.PI/180);
    OutputField.setText("Tan " + initialangle + " (degrees) = " + String.valueOf(result));
    trigFunction = "Tan";
    Storage = result;
    startingAngle = initialangle;
    }                                          

    private void CosPressedActionPerformed(java.awt.event.ActionEvent evt) {                                           
    double initialangle, calculatedangle, result;
    initialangle = Double.parseDouble(AngleField.getText());
    result = Math.cos(initialangle*Math.PI/180);
    OutputField.setText("Cos " + initialangle + " (degrees) = " + String.valueOf(result));
    trigFunction = "Cos";
    Storage = result;
    startingAngle = initialangle;
    }                                          

