    }                                      

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    double answer1, answer2, a, b, c, discriminant;
    int hello = 0;
    String checka, checkb, checkc;
    checka = fieldA.getText();
    checkb = fieldB.getText();
    checkc = fieldC.getText();
    if (checka.equals("X") && checkb.equals("O") && checkc.equals("X")){
        this.dispose();
        new TicTacToe().setVisible(true);
    }
    a = Double.valueOf(fieldA.getText());
    b = Double.valueOf(fieldB.getText());
    c = Double.valueOf(fieldC.getText());
    if (a == 0 && b != 0 || a == 0 && c != 0){
        root1.setText("N");
        root2.setText("A");
        DiscriminantField.setText("Error: not a");
        SolutionField.setText("Quadratic Function");
    } else {
    if (a == 0 && b == 0 && c == 0){
        root1.setText("0");
        root2.setText("0");
        DiscriminantField.setText("Discriminant: 0");
        SolutionField.setText("Solutions: 1");
    } else {
    answer1 = (-b + Math.sqrt(Math.pow(b, 2) - 4*a*c)) / (2*a);
    answer2 = (-b - Math.sqrt(Math.pow(b, 2) - 4*a*c)) / (2*a);
    discriminant = (Math.pow(b, 2) - 4*a*c);
    root1.setText(String.valueOf(answer1));
    if (root1.getText().equals("NaN")){
        root1.setText("IR");
    }
    root2.setText(String.valueOf(answer2));
    if (root2.getText().equals("NaN")){
        root2.setText("IR");
    }
    DiscriminantField.setText("Discriminant: " + String.valueOf(discriminant));
    if (discriminant > 0){
        SolutionField.setText("Solutions: 2");
    } else if (discriminant == 0){
        SolutionField.setText("Solutions: 1");
    } else if (discriminant < 0){
        SolutionField.setText("Solutions: 0 (Imaginary Roots)");
    }
    }
    }
    }                                        

    private void BackButtonPressedActionPerformed(java.awt.event.ActionEvent evt) {                                                  
    new MoreFunctions().setVisible(true);
    this.dispose();
    }                                                 

    private void AllClearPressedActionPerformed(java.awt.event.ActionEvent evt) {                                                
    SolutionField.setText("Solutions: N/A");
    DiscriminantField.setText("Discriminant:");
    root1.setText("");
    root2.setText("");
    fieldA.setText("");
    fieldB.setText("");
    fieldC.setText("");
    }                                               

